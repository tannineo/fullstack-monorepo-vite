{
  "compilerOptions": {
    "baseUrl": ".",

    "strict": false,
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "module": "esnext",
    "lib": ["ESNext"],
    "sourceMap": true,

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "declaration": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "esModuleInterop": true,

    "types": ["node", "vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
